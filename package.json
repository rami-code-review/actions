{
  "name": "rami-action",
  "version": "1.0.0",
  "description": "GitHub Action for Rami AI code review",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "all": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shavakan/rami-action.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "ai",
    "pull-request"
  ],
  "author": "Shavakan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shavakan/rami-action/issues"
  },
  "homepage": "https://github.com/Shavakan/rami-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  }
}
